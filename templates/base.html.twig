<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
           
    </head>
    <body>
        {% block content %}
            <div class="container-fluid">
                <div class="row">
                    <nav class="navbar navbar-expand-sm tete">
                        <div class="container-fluid">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active text-white" href="#">Active</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active text-white text-center" href="#">Active</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>

                <div class="row ">
                    <div class="col-2 sticky-top tete">
                        <div class="d-flex flex-sm-column flex-row flex-nowrap align-items-center sticky-top tete">
                            <a href="/" class="d-block p-3 link-dark text-decoration-none" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
                               <h5 class="fw bold text-white"> Suivre votre colis </h5>
                               <hr/>
                            </a>
                            <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto mx-auto text-center justify-content-between w-100 px-3 align-items-center">
                                <form action="{{ path('app_home')}}">
                                 <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="numero" class="form-label text-white">Numero d'envoi:</label>
                                        <input type="text" class="form-control" id="numero" name="numero" placeholder="Taper le numero d'envoi">
                                    </div>
                                </li>
                                <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="numeroBordereau" class="form-label text-white">Numero de bordereau:</label>
                                        <input type="text" class="form-control" id="numeroBordereau" name="numeroBordereau" placeholder="numero de bordereau">
                                    </div>
                                </li>
                                <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="numeroFacture" class="form-label text-white">Numero facture:</label>
                                        <input type="text" class="form-control" id="numeroFacture" name="numeroFacture" placeholder="numero de facture">
                                    </div>
                                </li>
                                <li>
                                    <select name="types" id="types">
                                        <option value="Lettre">Lettre</option>
                                        <option value="AO">AO</option>
                                    </select>
                                </li>
                                <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="expediteur" class="form-label text-white">Bureau expediteur:</label>
                                        <input type="text" class="form-control" id="expediteur" name="expediteur">
                                    </div>
                                </li>
                                 <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="destinataire" class="form-label text-white">Bureau destinataire:</label>
                                        <input type="text" class="form-control" id="destinaire" name="destinataire">
                                    </div>
                                </li>
                                 <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="idExpediteur" class="form-label text-white">Id expediteur:</label>
                                        <input type="number" class="form-control" id="idExpediteur" name="idExpediteur">
                                    </div>
                                </li>
                                 <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="idDestinataire" class="form-label text-white">Id destinataire:</label>
                                        <input type="number" class="form-control" id="idDestinataire" name="idDestinataire">
                                    </div>
                                </li>
                                <li class="nav-item">
                                     <div class="mb-3 mt-3">
                                        <label for="debut" class="form-label text-white">Date debut:</label>
                                        <input type="date" class="form-control" id="debut" name="debut">
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="mb-3 mt-3">
                                        <label for="fin" class="form-label text-white">Date fin:</label>
                                        <input type="date" class="form-control" id="fin" name="fin">
                                    </div>
                                </li>
                                 <li class="nav-item">
                                    <div class="mb-3 mt-3">
                                        <button type="submit" class="btn btn-danger btn-sm">Rechercher</button>
                                    </div>
                                </li>
                                </form>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm p-3 min-vh-100">
                        {% endblock %}

                        {% block body %}
                    </div>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
